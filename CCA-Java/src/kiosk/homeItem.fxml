<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import kiosk.HomeItemController?>

<StackPane fx:id="root" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kiosk.HomeItemController">
    <ImageView fx:id="image">
        <fitWidth><HomeItemController fx:constant="IMAGE_WIDTH" /></fitWidth>
        <fitHeight><HomeItemController fx:constant="IMAGE_HEIGHT" /></fitHeight>
    </ImageView>
    <Button StackPane.alignment="BOTTOM_CENTER" fx:id="button" styleClass="bt-main">
        <StackPane.margin><Insets left="15.0" top="15.0" right="15.0" bottom="15.0" /></StackPane.margin>
    </Button>
</StackPane>